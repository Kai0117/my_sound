<div class="container hero-container d-flex justify-content-center align-items-center">
  <div class="center hero-content text-center">


<div class="container text-center py-5">
  <h2 class="hero-title mb-4">これを聴いてね〜</h2>

  <% if @title.present? && @artist.present? %>
    <p class="fs-4 mb-4">
      <strong><%= @title %></strong><br>
      <strong>- <%= @artist %></strong>
    </p>

    <% if @cover_url.present? %>
      <div class="mb-4">
        <%= image_tag @cover_url, alt: "Album Cover", width: 300, class: "img-fluid rounded shadow" %>
      </div>

      <% if @track_url.present? %>
        <p>
        <a href="<%= @track_url %>" 
        target="_blank" 
        class="modern-spotify-btn">
       🎧 Spotifyで聴く
       </a>
        </p>
      <% end %>
    <% else %>
      <p class="text-muted">ジャケット画像が取得できませんでした</p>
    <% end %>
  <% else %>
    <p class="text-muted">おすすめの曲がまだありません</p>
  <% end %>
</div>
</div>
</div>
















